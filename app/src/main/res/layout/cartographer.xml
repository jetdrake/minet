<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TableRow>
        <TextView
            android:paddingTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Mag Data"
            android:textSize="36sp"/>

        <TextView
            android:id="@+id/reading"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="36sp"/>

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/x"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="x"/>

        <TextView
            android:id="@+id/y"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:text="y" />

        <TextView
            android:id="@+id/z"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:text="z"/>

    </TableRow>

    <TableRow>
        <TextView
            android:paddingTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Grav Data"
            android:textSize="36sp"/>

        <TextView
            android:id="@+id/accreading"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="36sp"/>

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/accx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="x"/>

        <TextView
            android:id="@+id/accy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:text="y" />

        <TextView
            android:id="@+id/accz"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:text="z"/>



    </TableRow>


    <TableRow>

        <EditText
            android:paddingTop="50dp"
            android:id="@+id/roomsText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="bed, bath, beyond"
            android:hint="enter rooms you will be using"
            android:inputType="textPersonName" />


        <Button
            android:id="@+id/enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enter" />

    </TableRow>

    <ToggleButton
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Start"
        android:textOn="Stop" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp">

    </RadioGroup>

    <!--



    <TableRow>
        <TextView
            android:paddingTop="10dp"
            android:id="@+id/calc_room"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="preview"
            android:textSize="24sp"
            />

        <Button
            android:id="@+id/calc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cart_calc"
            />

    </TableRow>

    -->

    <TableRow>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/use"
            ></androidx.appcompat.widget.AppCompatCheckBox>

        <EditText
            android:paddingTop="50dp"
            android:id="@+id/room"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="room to look up"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send DB" />

        <Button
            android:id="@+id/db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get DB" />

    </TableRow>



</TableLayout>