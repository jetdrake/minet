<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/carSensorContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TableRow>
        <TextView
            android:paddingTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Mag Data"
            android:textSize="36sp"/>

        <TextView
            android:id="@+id/reading"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="0.0"
            android:textSize="36sp"/>

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/x"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="x"/>

        <TextView
            android:id="@+id/y"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="y" />

        <TextView
            android:id="@+id/z"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="z"/>

    </TableRow>

    <TableRow>
        <TextView
            android:paddingTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Grav Data"
            android:textSize="36sp"/>

        <TextView
            android:id="@+id/accreading"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="0.0"
            android:textSize="36sp"/>

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/accx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="x"/>

        <TextView
            android:id="@+id/accy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="y" />

        <TextView
            android:id="@+id/accz"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="z"/>



    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/delayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="Sensor Delay in ms"/>

        <Button
            android:id="@+id/delayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enter"/>

    </TableRow>


    <TableRow>

        <Button
            android:id="@+id/stepBtn"
            android:layout_height="100dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Step"/>


    </TableRow>

    <TableRow>

        <EditText
            android:paddingTop="10dp"
            android:id="@+id/roomsText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="bed, bath, beyond"
            android:hint="enter rooms you will be using"
            android:inputType="textPersonName" />


        <Button
            android:id="@+id/enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enter" />

    </TableRow>

    <ToggleButton
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Start"
        android:textOn="Stop" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp">

    </RadioGroup>

    <TableRow>

        <EditText
            android:paddingTop="50dp"
            android:id="@+id/dbtext"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="enter db"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/send"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send DB" />

    </TableRow>



</TableLayout>